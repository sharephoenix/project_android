<resources>

    <!-- 自定义的ActionBar Style-->
    <style name="CustomActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:contentInsetEnd">0dp</item><!--右边距为0-->
        <item name="android:contentInsetStart">0dp</item><!--左边距为0-->
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
    </style>
    　　<!-- 自定义的Theme-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="android:colorAccent">@color/colorAccent</item>-->
        <!--<item name="android:actionBarSize">64dp</item>&lt;!&ndash;设置ActionBar的高度&ndash;&gt;-->
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
        <item name="android:statusBarColor">#000000</item><!--效果和colorPrimary一样-->
        <!--<item name="android:windowLightStatusBar">true</item>&lt;!&ndash;设置StatusBar上Icon高亮&ndash;&gt;-->
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

</resources>
